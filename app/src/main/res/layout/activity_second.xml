<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textCourseInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mobile Software Engineering Challenges:\n\n1. Device fragmentation\n2. App lifecycle complexity\n3. UI consistency\n4. Efficient memory usage\n5. Robust testing"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Main Activity"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textCourseInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
